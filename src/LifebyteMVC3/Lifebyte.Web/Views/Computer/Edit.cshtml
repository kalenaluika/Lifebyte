@model Lifebyte.Web.Models.Core.Entities.Computer
@{
    ViewBag.Title = "Lifebyte - Edit Computer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit Computer</h2>
<p>Please e-mail the Belarc HTML file to 
<a href="mailto:webmaster@lifebyte.org">webmaster@lifebyte.org</a> for now. 
